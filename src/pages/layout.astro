---
import "../styles/global.css";
interface Props {
  title: string;
}
const { title } = Astro.props;
const navClass = "py-2 px-6 text-text rounded-4xl font-bold";
---

<html lang="de" class="h-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="My portfolio website showcasing ongoing projects." />
    <meta name="keywords" content="portfolio, web developer, projects, skills, astro" />
    <meta property="og:title" content="Pierre-Maurice Merckel's Portfolio" />
    <meta property="og:description" content="My portfolio website showcasing ongoing projects." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://merckel.dev" />
    <title>{title}</title>
  </head>
  <body class="h-full m-0">
    <div class="min-h-full relative pb-20">
      <header>
        <nav class="flex justify-around mt-4 md:max-w-1/4 md:mx-auto">
          <a
            href="/"
            class:list={[navClass, Astro.url.pathname === "/" && "bg-primary"]}
          >
            Home
          </a>
          <a
            href="/projects"
            class:list={[
              navClass,
              Astro.url.pathname === "/projects" && "bg-primary",
            ]}
          >
            Projects
          </a>
        </nav>
      </header>
      <main class="px-4 my-13">
        <slot />
      </main>
      <footer class="absolute bottom-1 w-full text-center py-4">
        <p>
          Copyright Â© {new Date().getFullYear()} Pierre-Maurice Merckel.<br /> All
          rights reserved.
        </p>
      </footer>
    </div>
  </body>
</html>
