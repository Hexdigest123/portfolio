---
interface Props {
  name: string;
  href: string;
  image: string;
}
const { name, href, image } = Astro.props;
---

<a href={href} class="block relative w-full h-64 rounded-lg overflow-hidden">
  <img
    src={image}
    alt={`${name} project thumbnail`}
    class="absolute inset-0 w-full h-full object-cover"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent">
  </div>
  <div
    class="absolute bottom-0 left-0 px-4 py-2 bg-primary text-nowrap rounded-tr-3xl"
  >
    <h3 class="text-subheader font-semibold text-white">{name}</h3>
  </div>
</a>
